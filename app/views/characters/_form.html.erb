<%= show_errors_for(character) %>
<%= form_for character do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :species, "Species" %>
  <%= f.text_field :species %>
  <%= f.label :race, "Race" %>
  <%= f.text_field :race %>
  <%= f.label :age, "Age" %>
  <%= f.number_field :age %>
  <%= f.label :average_lifespan, "Average Lifespan" %>
  <%= f.number_field :average_lifespan %>
  <%= f.label :physical_description, "Physical Description" %>
  <%= f.text_area :physical_description %>
  <%= f.label :notes, "Notes" %>
  <%= f.text_area :notes %>
  <%= f.label :shared, "Share?" %>
  <%= f.check_box :shared, {}, "true", "false" %>
  <%= f.submit %>
<% end %>