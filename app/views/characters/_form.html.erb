<%= form_for character do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id%>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %><br>
  <%= f.label :species, "Species" %><br>
  <%= f.text_field :species %><br>
  <%= f.label :race, "Race" %><br>
  <%= f.text_field :race %><br>
  <%= f.label :age, "Age" %><br>
  <%= f.number_field :age %><br>
  <%= f.label :average_lifespan, "Average Lifespan" %><br>
  <%= f.number_field :average_lifespan %><br>
  <%= f.label :physical_description, "Physical Description" %><br>
  <%= f.text_area :physical_description %><br>
  <%= f.label :notes, "Notes" %><br>
  <%= f.text_area :notes %><br>
  <%= f.label :shared, "Share?" %>
  <%= f.check_box :shared, {}, "true", "false" %><br>
  <%= f.submit %>
<% end %>